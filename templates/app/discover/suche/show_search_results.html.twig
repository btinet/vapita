{% extends 'app.html.twig' %}

{% block body_content %}
    <section class="fit py-5 mb-3">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <h3 class="h2 mb-5">{{ current_post.title|trans }}</h3>
                    <form class="mb-3" action="{{ path('app_show_post', {
                        'category_slug': 'discover',
                        'sub_category_slug': 'suche',
                        'post_slug': 'vapita-durchsuchen'
                    }) }}" method="post">
                        <div class="d-flex justify-content-between align-items-center">
                            <input type="search" class="form-control form-control-lg" id="search_global" name="search" placeholder="{{ app.request.get('search')|default('Suchen') }}">

                            <label for="search_global">
                            </label>
                        </div>
                    </form>
                    <div class="text-left">
                    {% if results %}
                        <h4 class="mb-5">{{ results|length }} Ergebnisse f√ºr <i class="text-primary">{{ app.request.get('search')|default('') }}</i></h4>
                        {{ include('app/search_results.html.twig') }}
                    {% endif %}
                    {% if error and isPost %}
                        <p>Keine Ergebnisse gefunden.</p>
                    {% endif %}
                </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}