<nav class="local-nav py-2 fit" id="local_nav">
    <div class="container">
        <div class="local-nav-items d-flex justify-content-between align-items-center">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-baseline flex-fill">
                <a
                        href="{{ path('app_show_post', {
                            'category_slug': current_category.slug,
                            'sub_category_slug': current_sub_category.slug,
                            'post_slug': current_sub_category.posts|first.slug

                        }) }}"
                        class="local-nav-title h6 py-1 mb-0"
                >
                    {{ current_sub_category.title }}
                </a>
                <div class="list-inline local-nav-sub-categories d-none" id="local_nav_items">
                    <div class="d-block d-md-none my-3">
                        {{ include('app/post_content_table.html.twig', {'custom_css': '-nav'}) }}
                    </div>
                    {% for item in current_sub_category.posts %}
                        {% if item.isLocalEntry %}
                            {% if item.slug == current_post.slug %}
                                {% set active = 'text-muted'%}
                                {% else %}
                                    {% set active = ''%}
                            {% endif %}
                            <a
                                    href="{{ path('app_show_post', {
                                        'category_slug': current_category.slug,
                                        'sub_category_slug': current_sub_category.slug,
                                        'post_slug': item.slug

                                    }) }}"
                                    class="list-inline-item d-block w-100 my-1 my-sm-0 d-sm-inline {{ active }}"
                            >
                                {{ item.title }}
                            </a>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <div class="local-nav-dropdown-button d-flex d-sm-none align-self-start">
                <a href="javascript:void(0);" class="local-nav-title">
                    <i class="ti ti-angle-down" id="angle-down-icon"></i>
                </a>
            </div>
        </div>
    </div>
</nav>