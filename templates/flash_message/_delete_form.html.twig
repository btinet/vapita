<form method="post" action="{{ path('flash_message_delete', {'id': flash_message.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flash_message.id) }}">
    <button class="btn">Delete</button>
</form>
