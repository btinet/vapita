<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, viewport-fit=cover, initial-scale=1, maximum-scale=1">
    <title>{% block title %}{{ controller_name ?? '' }} | {{ app_title ?? "n/a" }}{% endblock %}</title>
    {% block opengraph %}{% endblock %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}
</head>
<body style="padding: 1rem 0">

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                {% block header %}
                    <div class="card-header">
                        <a href="{{ url('admin') }}" class="btn btn-primary font-weight-bolder">Administration</a>
                        <a href="{{ url('app_logout') }}" class="btn btn-danger font-weight-bolder">Abmelden</a>
                    </div>
                {% endblock %}
                {% block body %}
                    <div class="card-body">
                        {% block content %}{% endblock %}
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}

    <script src="{{ asset('legacy/tinymce/tinymce.min.js') }}"></script>


    <script type="text/javascript">
        tinymce.init({
            selector: '.tinymce',
            plugins: 'anchor table codesample media link image imagetools visualblocks code charmap lists',
            toolbar: 'codesample anchor link image visualblocks code charmap numlist bullist',
            codesample_languages: [
                { text: 'HTML/XML', value: 'markup' },
                { text: 'JavaScript', value: 'javascript' },
                { text: 'CSS', value: 'css' },
                { text: 'PHP', value: 'php' },
                { text: 'Ruby', value: 'ruby' },
                { text: 'Python', value: 'python' },
                { text: 'Java', value: 'java' },
                { text: 'C', value: 'c' },
                { text: 'C#', value: 'csharp' },
                { text: 'C++', value: 'cpp' },
                { text: 'Shell', value: 'shell' },
                { text: 'Bash', value: 'bash'}
            ],
            relative_urls : false,
            remove_script_host : true,
            document_base_url: '{{ app.request.getSchemeAndHttpHost() }}'
        });



    </script>

{% endblock %}
</body>
</html>