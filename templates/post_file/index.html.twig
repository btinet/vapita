{% extends 'admin.html.twig' %}

{% block title %}PostFile index{% endblock %}

{% block content %}
    <h1>PostFile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>MetaTitle</th>
                <th>Description</th>
                <th>FileName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post_file in post_files %}
            <tr>
                <td>{{ post_file.id }}</td>
                <td>{{ post_file.title }}</td>
                <td>{{ post_file.metaTitle }}</td>
                <td>{{ post_file.description }}</td>
                <td>{{ post_file.fileName }}</td>
                <td>
                    <a href="{{ path('post_file_show', {'id': post_file.id}) }}">show</a>
                    <a href="{{ path('post_file_edit', {'id': post_file.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_file_new') }}">Create new</a>
{% endblock %}
