{% extends 'base.html.twig' %}

{% block title %}PostFile{% endblock %}

{% block body %}
    <h1>PostFile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post_file.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post_file.title }}</td>
            </tr>
            <tr>
                <th>MetaTitle</th>
                <td>{{ post_file.metaTitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post_file.description }}</td>
            </tr>
            <tr>
                <th>FileName</th>
                <td>{{ post_file.fileName }}</td>
            </tr>
            <tr>
                <th>FileSize</th>
                <td>{{ post_file.fileSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post_file.updatedAt ? post_file.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post_file.slug }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ post_file.created ? post_file.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ post_file.updated ? post_file.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_file_index') }}">back to list</a>

