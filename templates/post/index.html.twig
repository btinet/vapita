{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>MetaTitle</th>
                <th>Description</th>
                <th>MetaDescription</th>
                <th>Content</th>
                <th>Slug</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Link</th>
                <th>LinkTitle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.metaTitle }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.metaDescription }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.created ? post.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.updated ? post.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.link }}</td>
                <td>{{ post.linkTitle }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
